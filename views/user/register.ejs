<% layout('layouts/boilerplate') %> 

<div class="col-6 offset-3 mb-5">
<h1>Register Form</h1>
</div>

<form action="/register" method="POST" novalidate class="validate-form col-6 offset-3">

    <div class="mb-3">
      <label class = "form-label" for="username">Usrename</label>
      <input class = "form-control" type="text" id="username" name="username" required/>
      <div class="invalid-feedback">Username is needed</div>
      <div class="valid-feedback">Good!</div>
    </div>

    <div class="mb-3">
        <label class = "form-label" for="email">Email</label>
        <input class = "form-control" type="email" id="email" name="email" required/>
        <div class="invalid-feedback">Email is needed</div>
        <div class="valid-feedback">Good!</div>
    </div>

    <div class="mb-3">
        <label class = "form-label" for="password">Password</label>
        <input class = "form-control" type="password" id="password" name="password" required/>
        <div class="invalid-feedback">Password is needed</div>
        <div class="valid-feedback">Good!</div>
    </div>

    <div class="mb-3">
        <button class="btn btn-success">Register</button>
        </div>
</form>