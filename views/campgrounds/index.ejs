<% layout('layouts/boilerplate') %>

<div class="mb-2">
  <div id="cluster-map"></div>
</div>


<h1>All campgrounds</h1>

<% for (let camp of campgrounds) {%>
  <div class="card mb-3">
    <div class="row">
      <% if (camp.images.length) {%> 
        <div class="col-md-4">
          <img class ="img-fluid" src="<%=camp.images[0].url%>" alt="">
        </div>
    <% } else {%> 
        <div class="col-md-4">
          <img class ="img-fluid" src="/images/image-not-found.png" alt="">
        </div>
      <% } %>  

      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=camp.title%></h5>
          <p class="card-text"><%=camp.description%></p>
          <p class="card-text">
            <small class="text-muted"><%=camp.location%></small>
          </p>
          <a href= "campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
        </div>
      </div>
    </div>
  </div>
<% }%>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds =  '<%-JSON.stringify(campgrounds)%>';
</script>

<script src="/javascript/clusterMap.js"></script>